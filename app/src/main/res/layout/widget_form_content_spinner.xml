<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/textDataName"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="交貨通知單號"
            style="@style/TextStyle_16dp_black"
            android:textColor="@color/primaryBlue"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Spinner
            android:id="@+id/spinnerDataContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:padding="4dp"
            android:background="@drawable/under_line"
            style="@style/TextStyle_16dp_black"
            android:textColor="@color/primaryBlack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/textDataName"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/imageDown"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toTopOf="@+id/spinnerDataContent"
            app:layout_constraintBottom_toBottomOf="@+id/spinnerDataContent"
            app:layout_constraintRight_toRightOf="parent"
            app:tint="@color/primaryBlue"
            android:src="@drawable/arrow_down"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/deep_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>