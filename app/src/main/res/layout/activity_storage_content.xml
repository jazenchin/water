<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

    <data>
        <variable
            name="viewModel"
            type="com.lhr.water.ui.mapChoose.MapChooseViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <include
            android:id="@+id/widgetTitleBar"
            layout="@layout/widget_title_bar"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollViewForm"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@+id/widgetTitleBar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent" >
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerGoods"
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/linearButton"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="8dp"
                    tools:itemCount="4"
                    tools:listitem="@layout/widget_form_goods" />

                <LinearLayout
                    android:id="@+id/linearButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginBottom="24dp">
                    <LinearLayout
                        android:id="@+id/linearLayoutGoodInput"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/bg_r35_seed"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginLeft="6dp"
                            android:src="@drawable/good_input"
                            app:tint="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:text="@string/good_input"
                            android:textColor="@color/white"
                            android:textSize="@dimen/main_title_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayoutGoodOutput"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/bg_r35_d83c3c"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp">

                        <ImageView
                            android:id="@+id/imageAddItem"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginLeft="6dp"
                            android:src="@drawable/good_output"
                            app:tint="@color/white" />

                        <TextView
                            android:id="@+id/textAddItem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:text="@string/good_output"
                            android:textColor="@color/white"
                            android:textSize="@dimen/main_title_size" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>