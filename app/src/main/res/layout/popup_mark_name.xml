<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:windowTranslucentStatus="true">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/constrainBottom"
      android:layout_width="match_parent"
      android:layout_height="64dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginBottom="15dp"
      android:layout_marginLeft="15dp"
      android:layout_marginRight="15dp"
      android:background="@drawable/radius" >
    <ImageView
        android:id="@+id/imageTargetMark"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="12dp"
        style="@style/OptionsTint"
        android:src="@drawable/mark" />

    <TextView
        android:id="@+id/textTargetName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toRightOf="@+id/imageTargetMark"
        app:layout_constraintRight_toLeftOf="@+id/imageInformation"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@null"
        android:gravity="center_vertical|left"
        android:text="room_name"
        android:textColor = "@color/md_theme_light_onTertiaryContainer"
        android:textStyle="bold"
        android:textSize="25dp"/>


    <ImageView
        android:id="@+id/imageInformation"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="12dp"
        style="@style/OptionsTint"
        android:src="@drawable/information" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
