<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="281dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_r12_ffffff"
            android:orientation="vertical"
            android:padding="24dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:includeFontPadding="false"
                android:textAppearance="@style/TextAppearance.Astec.HeadLine4"
                android:textStyle="normal"
                tools:text="尚未驗證" />

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:includeFontPadding="false"
                android:textAppearance="@style/TextAppearance.Astec.Body2"
                android:textStyle="normal"
                tools:text="請至信箱啟用帳號後進行登入" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@null"
                android:includeFontPadding="false"
                android:textAppearance="@style/TextAppearance.Astec.HeadLine3"
                tools:text="確定" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@null"
                android:includeFontPadding="false"
                android:textAppearance="@style/TextAppearance.Astec.HeadLine3"
                tools:text="取消" />

        </LinearLayout>

    </FrameLayout>
</layout>