<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Water" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/seed</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="colorControlActivated">@color/md_theme_dark_onError</item>
        <item name="colorAccent">@color/seed</item>
    </style>


    <style name="formContentActivityTheme" parent="Theme.Water">
        <item name="colorControlActivated">@color/seed</item>
        <item name="colorAccent">@color/seed</item>
    </style>

    <!--    <style name="CustomEditText" parent="Widget.AppCompat.EditText">-->
    <!--        <item name="android:textColorHint">@color/design_default_color_error</item>-->
    <!--    </style>-->

    <style name="OptionsTint">
        <item name="android:tint">@color/seed</item>
        <!--    <item name="android:textStyle">bold</item>-->
    </style>

    <style name="mark_popup_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/enter_mark_popup</item>
        <item name="android:windowExitAnimation">@anim/exit_mark_popup</item>
    </style>

    <style name="RoundedCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TextStyle_16dp_black" parent="android:Widget.TextView">
        <item name="fontFamily">@font/ping_fang_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyle_24dp_black" parent="android:Widget.TextView">
        <item name="fontFamily">@font/ping_fang_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">24dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="FilterMenuAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>